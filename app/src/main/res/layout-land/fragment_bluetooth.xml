<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">
    <data>
        <import type="android.view.View"/>
        <variable
            name="bluetoothmodel"
            type="com.dmcs.op.model.BluetoothViewModel"/>
    </data>
    <LinearLayout
        android:clickable="true"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="블루투스"
                android:textAppearance="@style/MyFontTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@{bluetoothmodel.info}"
                android:textAppearance="@style/MyFontSubTitle"
                android:id="@+id/bluetooth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:visibility="@{bluetoothmodel.is_loading()?View.VISIBLE:View.GONE}"
                android:id="@+id/bluetooth_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:elegantTextHeight="true"
                android:padding="10dp"
                android:id="@+id/bluetooth"
                android:text="찾기"
                android:textColor="@color/accent"
                android:textAppearance="@style/MyFontSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:elegantTextHeight="true"
                    android:text="페어링된 디바이스"
                    android:textAppearance="@style/MyFontContentMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:background="@drawable/border"
                    android:id="@+id/bluetooth_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:elegantTextHeight="true"
                    android:text="검색된 디바이스"
                    android:textAppearance="@style/MyFontContentMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:background="@drawable/border"
                    android:id="@+id/bluetooth_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>