<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="colorOnSurface">@color/colorPrimaryLight2</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/button</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="MyTab" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="customSpinnerDialog">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>

    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <!-- Font theme. -->
    <style name="MyFontBigTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
    </style>
    <style name="MyFontTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
    </style>
    <style name="MyFontSubTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
    </style>
    <style name="MyFontSubTitlePop">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/one_mobile_pop</item>
    </style>

    <style name="MyFontContentLarge">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/one_mobile_pop</item>
    </style>
    <style name="MyFontContentMiddle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/one_mobile_pop</item>
    </style>
    <style name="MyFontContentMedium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/one_mobile_pop</item>
    </style>
    <style name="MyFontContentSmall">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/one_mobile_pop</item>
    </style>

    <style name="simpletooltip_default" parent="MyFontContentLarge"></style>
</resources>