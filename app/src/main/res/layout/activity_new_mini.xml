<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <data>
        <variable
            name="newmodel"
            type="com.dmcs.op.model.NewMiniViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/back1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:text="스마트 리모컨 App"
                        android:textAppearance="@style/MyFontSubTitlePop"
                        android:textColor="@color/colorPrimaryDark_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/version"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/component_background"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:text="버전"
                            android:textAppearance="@style/MyFontSubTitlePop"
                            android:textColor="@color/colorborderLight2" />

                        <TextView
                            android:id="@+id/error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/component_background"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:textAppearance="@style/MyFontContentLarge"
                            android:textColor="@color/simpletooltip_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/battery_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/component_background"
                                android:orientation="vertical"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/battery_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="5dp"
                                    android:text="배터리"
                                    android:textAppearance="@style/MyFontSubTitlePop"
                                    android:textColor="@color/colorborderLight2" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:background="@drawable/battery_border3"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_0"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_2"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_3"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_4"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_5"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_6"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_7"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_8"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/battery_9"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp"
                                        android:layout_weight="1"
                                        android:scaleType="matrix"
                                        android:src="@drawable/battery3"
                                        android:visibility="invisible" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:id="@+id/stop_key_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_style"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">

                            <ImageView
                                android:id="@+id/stop_key_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_baseline_do_disturb_24" />

                            <TextView
                                android:id="@+id/stop_key_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="정지"
                                android:textAppearance="@style/MyFontContentLarge"
                                android:textColor="@color/colorborderLight2" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/mode_key"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_style"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:text="고속"
                            android:textAppearance="@style/MyFontContentLarge"
                            android:textColor="@color/colorborderLight2"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:elevation="20dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="150dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/circle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circle_anim_background"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:id="@+id/status"
                                android:layout_margin="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_style"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="invisible">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="상태        :  "
                                        android:textAppearance="@style/MyFontSubTitle" />

                                    <TextView
                                        android:id="@+id/status_break"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="    정지"
                                        android:textAppearance="@style/MyFontSubTitle" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="모드        :  "
                                        android:textAppearance="@style/MyFontSubTitle" />

                                    <TextView
                                        android:id="@+id/status_mode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="    저속"
                                        android:textAppearance="@style/MyFontSubTitle" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="스마트키 :  "
                                        android:textAppearance="@style/MyFontSubTitle" />

                                    <TextView
                                        android:id="@+id/status_smart"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="미사용"
                                        android:textAppearance="@style/MyFontSubTitle" />
                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/connect_key"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:autoSizeMaxTextSize="40dp"
                                android:autoSizeTextType="uniform"
                                android:background="@drawable/button_style"
                                android:gravity="center"
                                android:text="연결"
                                android:textAppearance="@style/MyFontBigTitle"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/smart_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lock_key"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/menu_style"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_baseline_lock_24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="스마트키 설정"
                                android:textAppearance="@style/MyFontSubTitlePop"
                                android:textColor="@color/colorborderLight2"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lock_layout"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/menu_style"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="@+id/lock_key"
                            app:layout_constraintLeft_toLeftOf="@+id/lock_key"
                            app:layout_constraintRight_toRightOf="@+id/lock_key"
                            app:layout_constraintTop_toTopOf="@+id/lock_key">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="사용"
                                android:textAppearance="@style/MyFontSubTitlePop"
                                android:textColor="@color/text" />

                            <com.github.angads25.toggle.widget.LabeledSwitch
                                android:id="@+id/lock_on_key"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:colorBorder="@color/colorAccent"
                                app:on="false" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/component_background"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/log"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/coding"
                            android:padding="20dp"
                            android:textAppearance="@style/MyFontContentSmall"
                            android:textColor="@color/white" />
                    </ScrollView>

                    <LinearLayout
                        android:id="@+id/speed_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/component_background"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="속도"
                                android:textAppearance="@style/MyFontContentLarge"
                                android:textColor="@color/colorborderLight2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0.0"
                                    android:textAppearance="@style/MyFontTitlePop"
                                    android:textColor="@color/colorborderLight2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=" [%]"
                                    android:textAppearance="@style/MyFontContentLarge"
                                    android:textColor="@color/colorborderLight2" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorStroke" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/up_key"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_style2"
                                android:clickable="true"
                                android:gravity="center"
                                android:padding="15dp"
                                android:src="@drawable/ic_baseline_add_24" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorStroke" />

                            <ImageView
                                android:id="@+id/down_key"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_style2"
                                android:clickable="true"
                                android:gravity="center"
                                android:padding="15dp"
                                android:src="@drawable/ic_baseline_remove_24" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:id="@+id/sub_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
    </RelativeLayout>

</layout>

